            window.onload = function () {
            let preloader = document.getElementById("preloader");
            preloader.style.opacity = "0";  // Fade out effect
            setTimeout(() => {
                preloader.style.display = "none";
            }, 500); // Delay before removing it completely
        };

        function toggleMenu() {
            const menu = document.getElementById("menuItems");
            const arrow = document.getElementById("arrow");
            menu.classList.toggle("hidden");
            arrow.classList.toggle("rotate-180");
        }
        document.addEventListener("DOMContentLoaded", function() {
    document.querySelectorAll(".fade-img").forEach(img => {
      img.classList.add("opacity-100");
    });
  });

  

  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 2,  // Show 2 reviews at a time
    spaceBetween: 20,  // Space between reviews
    loop: true,  // Infinite loop
    autoplay: {
      delay: 1000, // Auto-slide every 3 seconds
      disableOnInteraction: false,
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      640: { slidesPerView: 1 }, // On smaller screens, show 1 review
      1024: { slidesPerView: 3 } // On larger screens, show 3 reviews
    }
  });



  const carousel = document.getElementById("carousel");
        let index = 0;

        function changeImage() {
            index++;
            if (index >= carousel.children.length) {
                index = 0;
            }
            carousel.style.transform = `translateX(-${index * 100}%)`;
        }

        setInterval(changeImage, 3000); // Change every 3 seconds

